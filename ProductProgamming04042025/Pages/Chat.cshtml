@page
@model ProductProgamming04042025.Pages.ChatModel


<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/fonts/fontface.css">
    <link rel="stylesheet" href="~/css/shell.css">
    <link rel="stylesheet" href="~/css/loader.css">
    <link rel="stylesheet" href="~/css/toast.css">
    <link rel="stylesheet" href="~/css/chat.css">
</head>
<body>
    <main>
        <nav id="shell">
            <div id="mobile-shell" class="mobile">
                <div class="content">
                    <div class="hide-shell">
                        <img src="~/images/burger.svg" alt="">
                    </div>
                    <span class="title">
                        Чат
                    </span>
                </div>
            </div>
            <div id="menu" class="hide">
                <div class="user-card-container">
                    <div class="user-card">
                        <div class="content">
                            <div class="image">
                                <img src="~/images/avatar.svg" alt="">
                            </div>
                            <div class="user-info">
                                <span class="status">Пользователь</span>
                                <span class="name">@Model.UserProfile.FirstName @Model.UserProfile.LastName</span>
                            </div>
                            <div class="config">
                                <a asp-page="/Settings" class="gear">
                                    <img src="~/images/gear.svg" alt="C">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="shell-navigation">
                    <a asp-page="/Chat" class="nav-item selected">
                        <div class="content">
                            <div class="icon">
                                <img src="~/images/calendar.svg" alt="">
                            </div>
                            <span class="title">
                                Чат
                            </span>
                        </div>
                    </a>
                    <a asp-page="/Index" class="nav-item">
                        <div class="content">
                            <div class="icon">
                                <img src="~/images/dumbbells.svg" alt="">
                            </div>
                            <span class="title">
                                План тренировок
                            </span>
                        </div>
                    </a>
                </div>
                <button class="hide-shell">
                    <img src="~/images/arrow.svg" alt="">
                </button>
            </div>
        </nav>
        <section id="content">
            <div class="data">
                <div class="title">
                    Чат с ботом
                </div>
                <div id="chat">
                    <div class="load-more-cover">
                        <div class="loadmore">Загрузить больше</div>
                    </div>
                    <div class="messages">
                        
                    </div>
                    <form id="chat-form" class="user-input" method="post" asp-page-handler="SendMessageA">
                        <input type="text" name="message" placeholder="Скорректируйте план тренировок...">
                        <button type="submit">
                            <img src="~/images/up.svg" alt="">
                        </button>
                    </form>
                </div>
                <div class="attention">
                    <span>Ответы генерируются нейросетью, перед началом тренировок проконсультируйтесь со специалистом</span>
                </div>
            </div>
        </section>
    </main>

    <script src="~/js/shell.js"></script>
    <script src="~/js/loader.js"></script>
    <script src="~/js/toast.js"></script>
    <script src="~/js/chat.js">
    </script>
    <script>
        function applyPlan(planId) {
            fetch(`/Chat?handler=ApplyPlanA&id=`+planId, {
                method: 'GET'
            }).then(response => {
                if (response.ok) {
                    window.location.href = '/';
                }
            });
        }
    </script>
</body>
</html>