@page
@model ProductProgamming04042025.Pages.ChatModel


<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/fonts/fontface.css">
    <link rel="stylesheet" href="~/css/shell.css">
    <link rel="stylesheet" href="~/css/chat.css">
</head>
<body>
    <main>
        <nav id="shell">
            <div id="mobile-shell" class="mobile">
                <div class="content">
                    <div class="hide-shell">
                        <img src="~/images/burger.svg" alt="">
                    </div>
                    <span class="title">
                        Чат
                    </span>
                </div>
            </div>
            <div id="menu" class="hide">
                <div class="user-card-container">
                    <div class="user-card">
                        <div class="content">
                            <div class="image">
                                <img src="~/images/avatar.svg" alt="">
                            </div>
                            <div class="user-info">
                                <span class="status">Пользователь</span>
                                <span class="name">@Model.UserProfile.FirstName @Model.UserProfile.LastName</span>
                            </div>
                            <div class="config">
                                <a asp-page="/Settings" class="gear">
                                    <img src="~/images/gear.svg" alt="C">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="shell-navigation">
                    <a asp-page="/Chat" class="nav-item selected">
                        <div class="content">
                            <div class="icon">
                                <img src="~/images/calendar.svg" alt="">
                            </div>
                            <span class="title">
                                Чат
                            </span>
                        </div>
                    </a>
                    <a asp-page="/Index" class="nav-item">
                        <div class="content">
                            <div class="icon">
                                <img src="~/images/dumbbells.svg" alt="">
                            </div>
                            <span class="title">
                                План тренировок
                            </span>
                        </div>
                    </a>
                </div>
                <button class="hide-shell">
                    <img src="~/images/arrow.svg" alt="">
                </button>
            </div>
        </nav>
        <section id="content">
            <div class="data">
                <div class="title">
                    Чат с ботом
                </div>
                <div id="chat">
                    <div class="messages">
                        @foreach (var message in Model.Messages)
                        {
                            <div class="message @(message.IsBot ? "bot-answer" : "")">
                                <div class="content">
                                    <div class="text">
                                        @Html.Raw(message.Text)
                                    </div>
                                    @if (message.IsBot && message.Plan != null)
                                    {
                                        <button class="apply-plan" onclick="applyPlan(@message.Plan.Id)">
                                            <div class="content">
                                                Применить план
                                            </div>
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <form class="user-input" method="post" asp-page-handler="SendMessage">
                        <input type="text" name="message" placeholder="Введите свой запрос...">
                        <button type="submit">
                            <img src="~/images/up.svg" alt="">
                        </button>
                    </form>
                </div>
                <div class="attention">
                    <span>Ответы генерируются нейросетью, перед началом тренировок проконсультируйтесь со специалистом</span>
                </div>
            </div>
        </section>
    </main>

    <script src="~/js/shell.js"></script>
    <script>
        function applyPlan(planId) {
            fetch(`/api/plan/apply/${planId}`, {
                method: 'POST'
            }).then(response => {
                if (response.ok) {
                    window.location.href = '/Plan';
                }
            });
        }
    </script>
</body>
</html>