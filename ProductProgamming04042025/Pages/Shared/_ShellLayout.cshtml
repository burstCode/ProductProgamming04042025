@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/fonts/fontface.css">
    <link rel="stylesheet" href="~/css/shell.css">
    <link rel="stylesheet" href="~/css/plan.css">
    @RenderSection("Styles")
    <title>@ViewData["Title"]</title>
</head>

<body>
    <main>
        <nav id="shell">
            <div id="mobile-shell" class="mobile">
                <div class="content">
                    <div class="hide-shell">
                        <img src="~/images/burger.svg" alt="">
                    </div>
                    <span class="title">
                        @ViewData["Title"]
                    </span>
                </div>
            </div>
            <div id="menu" class="hide">
                <div class="user-card-container">
                    <div class="user-card">
                        <div class="content">
                            <div class="image">
                                <img src="~/images/avatar.svg" alt="">
                            </div>
                            <div class="user-info">
                                <span class="status">Пользователь</span>
                                <span class="name">@await UserManager.GetUserNameAsync(await UserManager.GetUserAsync(User))</span>
                            </div>
                            <div class="config"><a href="~/Settings" class="gear">
                                    <img src="~/images/gear.svg" alt="C">
                                </a></div>
                        </div>
                    </div>
                </div>
                <div id="shell-navigation">
                    <a href="/Chat" class="nav-item">
                        <div class="content">
                            <div class="icon">
                                <img src="~/images/chat.svg" alt="">
                            </div>
                            <span class="title">
                                Чат
                            </span>
                        </div>
                    </a>
                    <a href="/" class="nav-item ">
                        <div class="content">
                            <div class="icon">
                                <img src="~/images/dumbbells.svg" alt="">
                            </div>
                            <span class="title">
                                План тренеровок
                            </span>
                        </div>
                    </a>
                </div>
                <button class="hide-shell">
                    <img src="~/images/arrow.svg" alt="">
                </button>
            </div>
        </nav>
        <section id="content">
            <div class="data">
                <div class="title">
                    @ViewData["Title"]
                </div>
                @RenderBody()
            </div>
        </section>
    </main>

    <script src="~/js/shell.js"></script>
    <script src="~/js/plan.js"></script>
    @RenderSection("Scripts")
</body>

</html>