@page
@model ProductProgamming04042025.Pages.DashboardModel
@{
}

<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/fonts/fontface.css">
    <link rel="stylesheet" href="~/css/shell.css">
    <title>МАКЕТ</title>
</head>

<body>
    <main>
        <nav id="shell">
            <div id="mobile-shell" class="mobile">
                <div class="content">
                    <div class="hide-shell">
                        <img src="~/images/burger.svg" alt="">
                    </div>
                    <span class="title">
                        Учебный процесс
                    </span>
                </div>
            </div>
            <div id="menu" class="hide">
                <div class="user-card-container">
                    <div class="user-card">
                        <div class="content">
                            <div class="image">
                                <img src="~/images/avatar.svg" alt="">
                            </div>
                            <div class="user-info">
                                <span class="status">Студент</span>
                                <span class="name">Игорь Шадров</span>
                            </div>
                            <div class="config">
                                <a asp-page="/Config" class="gear">
                                    <img src="~/images/gear.svg" alt="C">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="shell-navigation">
                    <a asp-page="/Dashboard" class="nav-item selected">
                        <div class="content">
                            <div class="icon">
                                <img src="~/images/calendar.svg" alt="">
                            </div>
                            <span class="title">
                                Главная
                            </span>
                        </div>
                    </a>
                    <a asp-page="/Index" class="nav-item">
                        <div class="content">
                            <div class="icon">
                                <img src="~/images/chart.svg" alt="">
                            </div>
                            <span class="title">
                                Учебный процесс
                            </span>
                        </div>
                    </a>
                </div>
                <button class="hide-shell">
                    <img src="~/images/arrow.svg" alt="">
                </button>
            </div>
        </nav>
        <section id="content">
            123
        </section>
    </main>

    <script src="~/js/shell.js"></script>
</body>
</html>
